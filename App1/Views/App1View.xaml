<Window
  x:Class="App1.Views.App1View"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:viewModel="clr-namespace:App1.ViewModels"
  mc:Ignorable="d"
  d:DataContext="{d:DesignInstance viewModel:App1ViewModel}"
  WindowStartupLocation="CenterScreen"
  Title="App1"
  Height="450"
  Width="800"
  ScrollViewer.VerticalScrollBarVisibility="Auto">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition
        Height="30" />
      <RowDefinition
        Height="*" />
    </Grid.RowDefinitions>
    <DockPanel
      Margin="10,0"
      Grid.Row="0"
      VerticalAlignment="Center">
      <CheckBox
        IsChecked="{Binding UseJson, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </DockPanel>
    <ScrollViewer
      Grid.Row="1" Margin="10">
      <TextBlock
        Text="{Binding AssembliesName,UpdateSourceTrigger=PropertyChanged}"
        VerticalAlignment="Top"
        HorizontalAlignment="Center" />
    </ScrollViewer>
  </Grid>
</Window>